<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{{description}}{{#if date}}, {{date}}{{/if}}</title>
    <link rel="stylesheet" href="./collage.css" />
    <link rel="stylesheet" href="./themes/texture/theme.css" />
    <script type="module" src="./themes/texture/theme.js"></script>
    <script type="module" src="./slideshow.js"></script>
  </head>
  <body style="--gap: {{gap}}vmin; --aspect: {{aspect}}">
    <montage-slide>
      <div id="collageGrid">
      {{ collageColumns.ori . }}
      </div>
      <div class="tileGrid">
        <montage-label>
          {{description}}{{#if date}}, {{date}}{{/if}}
        </montage-label>
      </div>
    </montage-slide>
  </body>
</html>
