<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    {{#if base}}
    <base href="{{base}}" />
    {{/if}}
    <title>{{description}}{{#if date}}, {{date}}{{/if}}</title>
    <link rel="stylesheet" href="/collage.css" />
    <script type="module" src="/themes/GlassTile.js"></script>
    <script type="module" src="/slideshow.js"></script>
  </head>
  <body style="--gap: {{gap}}vmin; --aspect: {{aspect}}">
    <div id="background"></div>
    <div id="main">
      <div id="collageGrid">
      {{ collageColumns.ori . }}
      </div>
      <div class="tileGrid">
        <montage-glass-tile>
          {{description}}{{#if date}}, {{date}}{{/if}}
        </montage-glass-tile>
      </div>
    </div>
  </body>
</html>
